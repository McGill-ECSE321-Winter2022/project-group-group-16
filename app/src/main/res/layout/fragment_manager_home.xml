<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="130dp"
        android:text="Manager Home Page"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="416dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="-5dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="10dp"
            android:onClick="goToCreateEmployee"
            android:text="Create Employee" />

        <Button
            android:id="@+id/button4"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="10dp"
            android:onClick="goToEmployeeList"
            android:text="Employee List" />

        <Button
            android:id="@+id/button5"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="20dp"
            android:onClick="goToAddShift"
            android:text="Add Shifts" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="117dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="10dp"
            android:onClick="goToCreateCustomer"
            android:text="Create Customer" />

        <Button
            android:id="@+id/button66"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="10dp"
            android:onClick="signout"
            android:text="SIGN OUT" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>